<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
>
    <VBox>
        <layoutData>
            <FlexItemData growFactor="1" />
        </layoutData>
        <Panel
            class="sapUiTinyMargin"
            width="auto"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="{i18n>productCatalogHeaderText}" />
                    <ToolbarSpacer />
                    <Label
                        text="{i18n>productCatalogSortingSelectLabel}"
                        design="Bold"
                    />
                    <Select
                        forceSelection="false"
                        selectedKey="ID"
                        change=".onSortingChange"
                    >
                        <items>
                            <core:ListItem
                                key="ID"
                                text="Default"
                            />
                            <core:ListItem
                                key="price"
                                text="Price (Lowest)"
                            />
                            <core:ListItem
                                key="price-Descending"
                                text="Price (Highest)"
                            />
                            <core:ListItem
                                key="title"
                                text="Name (A-Z)"
                            />
                            <core:ListItem
                                key="title-Descending"
                                text="Name (Z-A)"
                            />
                        </items>
                    </Select>
                    <SegmentedButton
                        id="idListViewSelector"
                        class="sapUiMediumMarginBegin"
                        selectedKey="card"
                        selectionChange=".onListViewSelectorChange"
                    >
                        <items>
                            <SegmentedButtonItem
                                text="Card"
                                key="card"
                                icon="sap-icon://card"
                            />
                            <SegmentedButtonItem
                                text="List"
                                key="list"
                                icon="sap-icon://list"
                            />
                        </items>
                    </SegmentedButton>
                </OverflowToolbar>
            </headerToolbar>
            <content>
                <VBox class="sapUiTinyMargin">
                    <f:GridList
                        id="idProductCatalog"
                        items="{
                            path: 'main>/Products',
                            factory: '.createProductCatalogListContent',
                            sorter: {path: 'ID'}
                        }"
                        growing="true"
                        growingScrollToLoad="true"
                        updateFinished=".onProductCatalogUpdateFinished"
                        width="100%"
                    >
                        <f:dependents>
                            <core:Fragment
                                fragmentName="ns.shop.view.ProductCatalogListItemLarge"
                                type="XML"
                            />
                            <core:Fragment
                                fragmentName="ns.shop.view.ProductCatalogListItemSmall"
                                type="XML"
                            />
                        </f:dependents>
                    </f:GridList>
                </VBox>
            </content>
        </Panel>
    </VBox>
</core:FragmentDefinition>
