<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
>
    <f:GridListItem id="idListItemLarge">
        <VBox
            class="sapUiSmallMargin"
            height="93%"
        >
            <Title
                text="{title}"
                wrapping="true"
            />
            <Label
                text="{brand/title}"
                wrapping="true"
            />
            <VBox class="sapUiTinyMarginTop">
                <Image
                    src="{thumbnail}"
                    mode="Background"
                    width="100%"
                    height="16rem"
                    backgroundSize="cover"
                    backgroundPosition="center center"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Image>
            </VBox>
            <ObjectNumber
                class="sapUiSmallMarginTopBottom sapMObjectNumberLarge"
                number="{
                  parts: [{path: 'price'}, {path: 'currency/code'}],
                  type: 'sap.ui.model.type.Currency',
                  formatOptions: {showMeasure: false}
                }"
                unit="{currency/code}"
            />
            <Text text="{description}">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Text>
            <HBox
                class="sapUiTinyMarginTop"
                justifyContent="SpaceBetween"
            >
                <Button
                    text="{i18n>productCatalogAddToCartButtonText}"
                    width="10rem"
                    press=".onAddToCart"
                    fieldGroupIds="idAddToCartButtonGroup"
                />
                <Button
                    text="{i18n>productCatalogDetailsButtonText}"
                    width="10rem"
                    press=".onOpenDetails"
                />
            </HBox>
        </VBox>
    </f:GridListItem>
</core:FragmentDefinition>
