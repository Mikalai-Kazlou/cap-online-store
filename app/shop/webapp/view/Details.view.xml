<mvc:View
    controllerName="ns.shop.controller.Details"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:fiori="sap.ui.webc.fiori"
>
    <Page
        title="{i18n>detailsPageTitle}"
        class="sapUiResponsivePadding--header"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <headerContent>
            <core:Fragment
                fragmentName="ns.shop.view.CartInfo"
                type="XML"
            />
        </headerContent>
        <content>
            <ObjectHeader
                responsive="true"
                fullScreenOptimized="true"
                intro="{brand/title}"
                title="{title}"
            />
            <HBox>
                <VBox
                    alignItems="End"
                    justifyContent="Center"
                >
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                    <VBox
                        class="sapUiMediumMargin"
                        width="70%"
                    >
                        <fiori:MediaGallery
                            id="idMediaGallery"
                            items="{path: 'images'}"
                        >
                            <fiori:MediaGalleryItem>
                                <Image src="{url}" />
                            </fiori:MediaGalleryItem>
                        </fiori:MediaGallery>
                    </VBox>
                </VBox>
                <VBox
                    class="sapUiMediumMargin"
                    width="35%"
                >
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsProductName}"
                            design="Bold"
                        />
                        <Text text="{title}" />
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsBrand}"
                            design="Bold"
                        />
                        <Text text="{brand/title}" />
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsCategory}"
                            design="Bold"
                        />
                        <Text text="{category/title}" />
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsRating}"
                            design="Bold"
                        />
                        <HBox alignItems="Center">
                            <RatingIndicator
                                value="{rating}"
                                iconSize="1.5rem"
                                displayOnly="true"
                            />
                            <Text
                                class="sapUiTinyMarginBegin"
                                text="{rating}"
                            />
                        </HBox>
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsDiscountPercentage}"
                            design="Bold"
                        />
                        <Text text="{discount}" />
                    </VBox>
                    <VBox
                        class="sapUiTinyMarginTopBottom"
                        width="70%"
                    >
                        <Label
                            text="{i18n>detailsDescription}"
                            design="Bold"
                        />
                        <Text text="{description}" />
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsStock}"
                            design="Bold"
                        />
                        <Text text="{stock}" />
                    </VBox>
                    <VBox class="sapUiTinyMarginTopBottom">
                        <Label
                            text="{i18n>detailsPrice}"
                            design="Bold"
                        />
                        <ObjectNumber
                            class="sapMObjectNumberLarge"
                            number="{
                                parts: [{path: 'price'}, {path: 'currency/code'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {showMeasure: false}
                            }"
                            unit="{currency/code}"
                        />
                    </VBox>
                    <VBox
                        class="sapUiLargeMarginTop"
                        alignItems="Center"
                        justifyContent="Center"
                    >
                        <VBox>
                            <StepInput
                                id="idQuantityStepInput"
                                value="1"
                                min="1"
                                max="99"
                                width="10rem"
                                textAlign="Center"
                                change=".onQuantityStepInputChange"
                            />
                        </VBox>
                        <VBox
                            alignItems="Center"
                            justifyContent="Center"
                        >
                            <HBox class="sapUiSmallMarginTop">
                                <Button
                                    id="idAddToCartButton"
                                    class="sapUiSmallMargin"
                                    text="{i18n>productCatalogAddToCartButtonText}"
                                    width="10rem"
                                    press=".onAddToCart"
                                />
                                <Button
                                    class="sapUiSmallMargin"
                                    text="{i18n>productCatalogBuyNowButtonText}"
                                    width="10rem"
                                    press=".onBuyNow"
                                />
                            </HBox>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
