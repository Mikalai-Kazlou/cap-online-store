<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:grid="sap.ui.layout.cssgrid"
>
    <f:GridListItem id="idListItemSmall">
        <HBox
            class="sapUiTinyMargin"
            alignItems="Center"
        >
            <VBox class="sapUiTinyMargin">
                <Image
                    src="{thumbnail}"
                    mode="Background"
                    width="5rem"
                    height="5rem"
                    backgroundSize="cover"
                    backgroundPosition="center center"
                />
            </VBox>
            <VBox class="sapUiTinyMargin">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <HBox alignItems="Center">
                    <Title
                        text="{title}"
                        wrapping="true"
                    />
                    <Label
                        class="sapUiTinyMarginBegin"
                        text="{brand/title}"
                        wrapping="true"
                    />
                </HBox>
                <Text text="{description}" />
            </VBox>
            <ObjectNumber
                class="sapUiTinyMargin sapMObjectNumberLarge"
                number="{
                  parts: [{path: 'price'}, {path: 'currency/code'}],
                  type: 'sap.ui.model.type.Currency',
                  formatOptions: {showMeasure: false}
                }"
                unit="{currency/code}"
            />
            <VBox class="sapUiTinyMargin">
                <Button
                    text="{i18n>productCatalogAddToCartButtonText}"
                    width="10rem"
                    press=".onAddToCart"
                    fieldGroupIds="idAddToCartButtonGroup"
                />
                <Button
                    text="{i18n>productCatalogDetailsButtonText}"
                    width="10rem"
                    press=".onOpenDetails"
                />
            </VBox>
        </HBox>
    </f:GridListItem>
</core:FragmentDefinition>
