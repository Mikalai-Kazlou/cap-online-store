<mvc:View
    controllerName="ns.shop.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        title="{i18n>mainPageTitle}"
        class="sapUiResponsivePadding--header"
    >
        <headerContent>
            <core:Fragment
                fragmentName="ns.shop.view.CartInfo"
                type="XML"
            />
        </headerContent>
        <content>
            <mvc:XMLView viewName="ns.shop.view.ProductCatalog" />
        </content>
    </Page>
</mvc:View>
